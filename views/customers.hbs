<h1>Customers</h1>

{{! READ table }}
<table id="customers-table">
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each customers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each customers}}
        <tr data-value={{this.id}}>
            <td>{{this.id}}</td>
            <td>{{this.first}}</td>
            <td>{{this.last}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>

 {{! DELETE form }}
            <td>
            <button class="delete-customer" data-id="{{this.id}}">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>New Customer</h2>
<form class='cuForm' id='create_customer_form' method='POST' action='/add-customer'>
        <label for='create_customer_fname'>First Name: </label>
        <input type='text' name='create_customer_fname' id='create_customer_fname' required />

        <label for='create_customer_lname'>Last Name: </label>
        <input type='text' name='create_customer_lname' id='create_customer_lname' required/>

        <label for='create_customer_phone'>Phone: </label>
        <input type='tel' name='create_customer_phone' id='create_customer_phone' pattern="[0-9]{10}" required/>

        <label for='create_customer_email'>Email Address: </label>
        <input type='email' name='create_customer_email' id='create_customer_email' required/>
    <input type='submit' value="Become a consumer today!" />
</form>

{{! UPDATE form }}
<h2>Update a Customer</h2>
<form class="cuForm" id="update_customer_form">
    <label>Customer:</label>
    <select name="update_customer_id" required>
    <option disabled selected>Select…</option>
    {{#each customers}}
        <option value="{{this.id}}">#{{this.id}} — {{this.first}} {{this.last}}</option>
    {{/each}}
    </select>


    <label>First Name:</label>
    <input id="update_customer_fname" name="update_customer_fname" required>

    <label>Last Name:</label>
    <input id="update_customer_lname" name="update_customer_lname" required>

    <label>Phone:</label>
    <input id="update_customer_phone" name="update_customer_phone" pattern="[0-9]{10}" required>

    <label>Email:</label>
    <input id="update_customer_email" name="update_customer_email" type="email" required>

    <button type="submit">Update</button>
</form>

<script src = "/js/add_customer.js"></script>
<script src = "/js/update_customer.js"></script>
<script src = "/js/delete_customer.js"></script>