<h1>Product Availability by store</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            <thead>
                <tr>
                    <th>Store</th>
                    <th>Product</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each inventory}}
        <tr id="inventory-{{this.id}}">
            <td>{{this.site}}</td>
            <td>{{this.product}}</td>

 {{! DELETE form }}
            <td>
                    <button
                        type="button"
                        class="delete-inventory"
                        data-id="{{this.id}}">
                        Delete
                    </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            </table>

<script src="/js/delete_inventory.js"></script>
