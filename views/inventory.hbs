<h1>Product Availability by store</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, print the keys as header }}
        <tr>
            {{#each inventory.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the site and products available}}
        {{#each inventory}}
        <tr>
            <td>{{this.site}}</td>
            <td>{{this.product}}</td>

 {{! DELETE form }}
            <form id='delete_person_form'>
                <input type='hidden' name='delete_location_id' value='{{this.id}}' />
                <input type='hidden' name='delete_location_name' value='{{this.fname}} {{this.lname}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

