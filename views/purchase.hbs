<h1>Place an Order Today!</h1>

<form class="cuForm" id="new_purchase_form">
  <label for="new_purchase_customer">
    Which of our loyal customers is making this sale?
  </label>
  <select name="new_purchase_customer" id="new_purchase_customer" required>
    <option value="" disabled selected>Select a Customer</option>
    {{#each customers}}
      <option value="{{this.id}}">
        #{{this.id}} — {{this.first}} {{this.last}}
      </option>
    {{/each}}
  </select>

  <br><br>

  <label for="new_purchase_employee">
    Which employee helped you the most?
  </label>
  <select name="new_purchase_employee" id="new_purchase_employee" required>
    <option value="" disabled selected>Select an Employee</option>
    {{#each employees}}
      <option value="{{this.id}}">
        #{{this.id}} — {{this.first}} {{this.last}}
      </option>
    {{/each}}
  </select>

  <br><br>

  <label for="new_purchase_product">
    What are you buying today?
  </label>
  <select name="new_purchase_product" id="new_purchase_product" required>
    <option value="" disabled selected>Select a Product</option>
    {{#each products}}
      <option value="{{this.id}}">
        #{{this.id}} — {{this.name}} ({{this.type}} @ ${{this.price}})
      </option>
    {{/each}}
  </select>

  <br><br>

  <label for="new_purchase_count">
    Quantity:
  </label>
  <input
    type="number"
    name="new_purchase_count"
    id="new_purchase_count"
    min="1"
    step="1"
    required
  />

  <br><br>

  <button type="submit">Let's make a deal!</button>
</form>

<script src="/js/add_order.js"></script>
